<%= semantic_form_for @translations do |f| %>  

	<%= f.inputs do %>
	  <%= f.input :dot_key_code %>
	  <%if new_record? %>
	    coll = CalmappVersionTranslationLanguage.where{translation_language_id == TranslationLanguage.TL_EN.id}.load.collect {|p| [ t(p.show_me, p.id ]}
	  <%else%>
	    coll = CalmappVersionTranslationLanguage.all.collect {|p| [ t(p.show_me, p.id ]}
	  <%end%>
	  <%= f.input :cavs_translation_language_id,  :as => :select, :collection => coll %> %>
	  <%= f.input :translation
    
	<% end %>
	<%= f.actions do %>
      <%= f.action(:submit)  %>    
  <% end %>
<% end %>