<%= semantic_form_for(@user, :method => "post",:url=> user_create_path) do |f| %>
  <%= f.inputs do %>
      <%= f.input :username%>
      <%=f.input :actual_name %>
      <%=f.input :email%>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
  <% end %>

  <%= f.actions do %>
    <%= f.action(:submit) %>
  <% end %>
<% end %>